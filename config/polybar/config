[style/tile]
; {{{
;height = 50
format-background = ${colors.background}
format-foreground = ${colors.foreground}
format-padding = 1.5
label-active-font = 0

; }}}

[module/date]
; {{{
type = internal/date
inherit = style/tile
height = 50

date =
date-alt = "%d/%m "

;date-alt = %a %b %d
;date-alt = %A, %d %B %Y

interval = 1.0
time = %H:%M
time-alt =  %H:%M

format =  <label>
label = %date%%time%
label-active-font = 0

; }}}

[module/pkgupdates]
; {{{
type = custom/script
inherit = style/tile

exec = ~/.config/polybar/pkgupdates
label = %output%

interval = 600

; }}}

[module/todos]
; {{{
type = custom/script
inherit = style/tile

exec = ~/.config/polybar/todos
label = "%{A:st '/home/shiro/bin/wiki':}%output%%{A}"


interval = 20

; }}}

[module/activities]
; {{{
type = custom/script
inherit = style/tile


#!/bin/zsh

export MPD_HOST="$HOME/.config/mpd/socket"

command="$1"
shift

has-track() {
  [[ `mpc current` != "" ]]
}

reload-library() {
  mpc clear
  mpc add /
  mpc shuffle
}

case "$command" in
  play)
    mpc play
    ;;
  pause)
    mpc pause
    ;;
  playpause | toggle)
    mpc toggle
    ;;
  next)
    mpc next || (reload-library && mpc play)
    ;;
  prev)
    mpc prev || (reload-library && mpc play)
    ;;
  forward)
    mpc seek '+00:00:05'
    ;;
  backward)
    mpc seek '-00:00:05'
    ;;
  volume-up)
    mpc volume '+5'
    ;;
  volume-down)
    mpc volume '-5'
    ;;
  library)
    selected=`ls ~/Music | shuf | wofi -d -i`
    [ -n "$selected" ] && play ~/"Music/$selected"
    ;;
esac


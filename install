#!/usr/bin/env bash

command_exists() {
    type "$1" > /dev/null 2>&1
}

echo "Installing dotfiles."


echo "Initializing submodule(s)"
git submodule update --init --recursive

 
mkdir -p ~/bin
mkdir -p ~/.local # local files directory
mkdir -p ~/.local/share
mkdir -p ~/.local/share/misc


source scripts/link.sh

echo "Done. Reload your terminal."
